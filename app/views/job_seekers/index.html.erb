<p id="notice"><%= notice %></p>

<h1>Job Seekers</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th>User</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @job_seekers.each do |job_seeker| %>
    <tr>
      <td><%= job_seeker.name %></td>
      <td><%= job_seeker.phone %></td>
      <td><%= job_seeker.user.email %></td>
      <td><%= link_to 'Show', job_seeker %></td>

      <% if job_seeker.user == current_user || auser_signed_in? %>
        <td><%= link_to 'Edit', edit_job_seeker_path(job_seeker) %></td>
        <td><%= link_to 'Destroy', job_seeker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

