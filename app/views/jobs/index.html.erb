<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Employment type</th>
      <th>Requirements</th>
      <th>Responsibilities</th>
      <th>Posted By</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= job.title %></td>
        <td><%= job.description %></td>
        <td><%= job.employment_type %></td>
        <td><%= job.requirements %></td>
        <td><%= job.responsibilities %></td>
        <td><%= Recruiter.find(job.recruiter_id).name %></td>
        <td><%= link_to 'Show', job %></td>
        <% if (ruser_signed_in? && Recruiter.find_by_ruser_id(current_ruser.id).id == job.recruiter_id) %>
          <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <% end %>
        <% if (auser_signed_in?) || (ruser_signed_in? && Recruiter.find_by_ruser_id(current_ruser.id).id == job.recruiter_id) %>
          <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

